pipeline {
 agent any
 
  stages {
     stage ('Compile Stage') {
 
     steps {
       (maven : 'maven') {
           sh "'${MAVEN_HOME}/opt/apache-maven-3.5.4' mvn clean compile"
           }
        }
      }
      stage ('Package Stage') {
 
     steps {
       (maven : 'maven') {
           sh "'${MAVEN_HOME}/opt/apache-maven-3.5.4' mvn clean package"
           }
        }
      }
     stage ('Testing Stage') {
 
     steps {
      (maven : 'maven') {
           sh "'${MAVEN_HOME}/opt/apache-maven-3.5.4' mvn clean test"
           }
        }
      }
    }
 }  
